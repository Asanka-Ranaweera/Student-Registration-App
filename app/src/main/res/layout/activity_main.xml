<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#528176"
    android:onClick="submit"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="674dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="377dp"
            android:layout_height="74dp"
            android:layout_marginTop="35dp"
            android:text="@string/tvTitle"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edtStudentId"
            android:layout_width="373dp"
            android:layout_height="65dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/edtStudentID"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="371dp"
            android:layout_height="45dp"
            android:text="@string/tvYear"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnYear"
            android:layout_width="346dp"
            android:layout_height="65dp"
            android:entries="@array/years" />

        <TextView
            android:id="@+id/tvSemester"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="@string/tvSemester"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spnSemester"
            android:layout_width="341dp"
            android:layout_height="71dp"
            android:entries="@array/semesters" />

        <CheckBox
            android:id="@+id/cbAgree"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:buttonTint="#170303"
            android:text="@string/cbAgreement" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="@string/btnSubmit" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="@string/btnCancel" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>